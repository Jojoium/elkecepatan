<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF8F8">

    <!-- Layout utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalkulator Umur"
            android:textColor="#1a1a1a"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="56dp"
            android:overScrollMode="ifContentScrolls">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Daily Activity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Describe your daily activity"
                    android:textSize="18sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/inputText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your message"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Date of Birth -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth*"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/monthInput"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Month"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/dayInput"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Day"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/yearInput"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Year"
                        android:background="@drawable/rounded_edittext"
                        android:padding="12dp" />
                </LinearLayout>

                <!-- Dropdown Spinners -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sex*"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/sexSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:entries="@array/sex_options"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you smoke?"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/smokingSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="8dp"
                    android:entries="@array/yes_no_options"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI*"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/bmiSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:entries="@array/bmi_options" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outlook"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/outlookSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:entries="@array/outlook_options"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alcohol Consumption"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/alcoholSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="8dp"
                    android:entries="@array/alcohol_options"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country*"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/countrySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:entries="@array/country_options"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level of Fitness"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/fitnessSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:entries="@array/fitness_levels"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diet Rating"
                    android:layout_marginBottom="4dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/dietSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:entries="@array/diet_ratings"/>
                <TextView
                    android:id="@+id/outputText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_card"
                    android:shadowColor="#888888"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="Output Text 1" />

                <TextView
                    android:id="@+id/outputText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_card"
                    android:shadowColor="#888888"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="Output Text 2" />
                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:background="@drawable/rounded_button"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="4dp" />
</FrameLayout>
